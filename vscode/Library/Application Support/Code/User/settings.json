// Place your settings in this file to overwrite the default settings
{
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.autoIndent": "full",
  "editor.fontFamily": "'Triplicate A', 'IBM Plex Mono',  'Hack Nerd Font'",
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.fontLigatures": "'ss02'",
  "editor.cursorStyle": "line-thin",
  "editor.lineHeight": 1.4,
  "editor.renderWhitespace": "selection",
  "editor.roundedSelection": false,
  "editor.cursorBlinking": "smooth",
  "editor.renderLineHighlight": "gutter",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "explorer.openEditors.visible": 0,
  "window.restoreWindows": "folders",
  "workbench.commandPalette.preserveInput": true,
  "workbench.colorTheme": "GitHub Dark",
  "workbench.colorCustomizations": {
    "statusBar.background": "#30353E",
    "statusBar.foreground": "#618C94",
    "statusBar.noFolderBackground": "#252526",
    "statusBar.debuggingBackground": "#252526",
    // "statusBarBackground": "white",
    // "panelBackground": "#555555",
    "sideBar.background": "#30353E",
    "sideBarTitle.foreground": "#618C94",
    "sideBarSectionHeader.background": "#282C34"
    // "activityBar.background": "#30353E",
    // "tab.inactiveBackground": "#282C34"
  },
  "emojisense.markupCompletionsEnabled": true,
  "files.associations": {
    "*.js": "javascriptreact"
  },
  "cSpell.enableFiletypes": [
    "c",
    "cpp",
    "csharp",
    "dockerfile",
    "go",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "latex",
    "markdown",
    "php",
    "plaintext",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "color-highlight.markerType": "dot-after",
  "color-highlight.markRuler": false,
  "color-highlight.languages": ["*"],
  "cSpell.language": ",en",
  "editor.colorDecorators": false,
  "editor.snippetSuggestions": "top",
  "search.smartCase": true,
  "telemetry.telemetryLevel": "off",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.detectIndentation": true,
  "files.trimTrailingWhitespace": true,
  "breadcrumbs.enabled": true,
  "cSpell.userWords": ["enartia", "memoized", "presentational", "unmount"],
  "workbench.iconTheme": "eq-material-theme-icons",
  "diffEditor.ignoreTrimWhitespace": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "importCost.mediumPackageColor": "#5C6370",
  "importCost.smallPackageColor": "#5C6370",
  "editor.wordBasedSuggestions": "off",
  "editor.formatOnSave": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "better-comments.tags": [
    {
      "tag": "fixme",
      "color": "#eb9aab",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "xxx",
      "color": "#000",
      "strikethrough": false,
      "backgroundColor": "#eb9aab"
    },
    {
      "tag": "todo",
      "color": "#b1d4b1",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontSize": 14,
  "todo-tree.filtering.excludeGlobs": ["node_modules"],
  "todo-tree.highlights.enabled": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.suggest.autoImports": false,
  "javascript.suggest.autoImports": false,
  "workbench.productIconTheme": "material-product-icons",
  "Lua.telemetry.enable": false,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "editor.guides.indentation": true,
  "window.titleBarStyle": "native",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "twig": "html"
  },
  "git.autofetch": true,
  "window.confirmBeforeClose": "keyboardOnly",
  "git.suggestSmartCommit": false,
  "security.workspace.trust.untrustedFiles": "open",
  "todo-tree.highlights.customHighlight": {
    "BUG": {
      "icon": "bug"
    },
    "HACK": {
      "icon": "tools"
    },
    "FIXME": {
      "icon": "flame"
    },
    "XXX": {
      "icon": "x"
    },
    "[ ]": {
      "icon": "issue-draft"
    },
    "[x]": {
      "icon": "issue-closed"
    }
  },
  "workbench.activityBar.location": "hidden"
}
